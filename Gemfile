source "https://rubygems.org"


# Jekyll itself
gem "jekyll", "~> 4.3"

# Theme
gem "just-the-docs", "~> 0.6.2" # latest stable at time of writing

# Common plugins
gem "jekyll-feed"              # RSS feed support
gem "jekyll-sitemap"           # Auto sitemap.xml
gem "jekyll-seo-tag"           # SEO meta tags
gem "jekyll-include-cache"     # Enables include caching (improves build performance)

# Deployment helpers (optional, but good for GitHub Pages)
gem "webrick", "~> 1.7"        # Required to serve locally with newer Ruby versions